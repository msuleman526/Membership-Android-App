<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ipEdt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/portEdt"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text"
        android:hint="IP Address"
        android:padding="10dp"
        android:textColor="@color/primaryTextColor" />

    <EditText
        android:id="@+id/portEdt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardDiv"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text"
        android:layout_centerInParent="true"
        android:hint="PORT Number"
        android:padding="10dp"
        android:textColor="@color/primaryTextColor" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardDiv"
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/whiteTextColor"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/vie"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="300dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/idCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageDiv"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/profileImage1"
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:src="@drawable/profile2"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/expiryTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageDiv"
                        android:gravity="center"
                        android:text="Expiry: 12-12-2022"
                        android:textColor="@color/black"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expiryTxt"
                        android:gravity="center"
                        android:text="John Farnadanze"
                        android:textColor="@color/black"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/track1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameTxt"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="~1%JULIE^12345690?"
                        android:textColor="@color/black"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/track2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/track1"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="~2;1234567890987654321?"
                        android:textColor="@color/black"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/track3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/track2"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="~3;1234567890987654321?"
                        android:textColor="@color/black"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/fullTrack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/track3"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="~2;68790113879?"
                        android:textColor="@color/black"
                        android:textSize="12px" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttons1"
        android:layout_below="@+id/cardDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Connect"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/printBtn"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Normal Print"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/print2Btn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="IP Print 1"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/print3Btn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="IP Print 2"
            android:textColor="@color/whiteTextColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zebraUsbFind"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Zebra USB Find"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/zebraUsbPrint"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Zebra USB Print"
            android:textColor="@color/whiteTextColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons3"
        android:layout_below="@+id/buttons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zebraNetworkFind"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Zebra Network Find"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/zebraNetworkPrint"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Zebra Network Print"
            android:textColor="@color/whiteTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/buttons3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/restApiPrint"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Print Via Rest Api"
            android:textColor="@color/whiteTextColor" />



    </LinearLayout>


</RelativeLayout>